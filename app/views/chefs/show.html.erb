<div class="container mt-3">
<%#= render 'shared/page_title', title: "Chef #{@chef.chefname}'s Profile" %>

<div class="container image-container">
  <div class="row">
    <div class="col-md-4 col-md-4-center">
      <%= gravatar_for @chef, size: 120 %>
    </div>


    <% if @chef.recipes.count != 0 %>
      <h4 class="display-4 chef-title" align="center"><%= @chef.chefname.titleize %>'s Recipes</h4>
      <div align="center">
        <%= will_paginate @chef_recipes %>
      </div>

      <%= render 'recipes/recipe', obj: @chef_recipes %>
      <div align="center">
        <%= will_paginate @chef_recipes %>
      </div>
    <% else %>
      <h4 align="center">No recipes yet!</h4>
    <% end %>
</div>
</div>

</div>
