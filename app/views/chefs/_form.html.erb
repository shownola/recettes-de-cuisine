<%= render 'shared/errors', obj: @chef %>

<div class="container">
  <div class="row">
    <div class="col-md-12 offset-2">
      <%= form_for(@chef, :html => { class: 'form-horizontal', role: 'form'}) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :chefname, 'Chefname' %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :chefname, class: 'form-control', placeholder: 'Enter Chefname', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :email %>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email Address' %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :password %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, class: 'form-control', placeholder: "Enter Password" %>
          </div>
        </div>
         <div class="form-group">
          <div class="control-label col-md-4">
            <%= f.label :password_confirmation %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit 'Create Chef', class: 'btn btn-success' %>
            <!--<%= f.submit(@chef.new_record? ? 'Create Chef' : 'Update Chef', class: 'btn btn-success') %>-->
          </div>
        </div>
      <% end %>
      <div class="col-md-4 col-md-offset-4">
        [ <%= link_to 'Cancel request and return to Recipes Listing', recipes_path, class: 'cancel-link' %>]
      </div>
    </div>
  </div>
</div>
