<div class="container mt-5">
<%= render 'shared/page_title', title: 'All Recipes' %>



<div class="container image-container">
<% @recipes.each_slice(6) do |recipes| %>
  <div class="row">
    <% recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="recipe">
          <div class="image_wrapper">
            <%= link_to recipe do %>
              <%= image_tag(recipe.image.url,size: '300x300') unless recipe.image.blank? %>
            <% end %>
          </div>
          <h2>
            <%= link_to recipe.title.titleize, recipe, class: 'title-link' %>
          </h2>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</div>

</div>
