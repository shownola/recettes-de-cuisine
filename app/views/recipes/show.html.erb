<%= render 'shared/page_title', title: @recipe.title %>

<div class="main_content">
<div class="row" id="recipe_top">
  <div class="col-md-4">
  <%= image_tag(@recipe.image.url, size: '400x400') if @recipe.image? %> 
  </div>
  <div class="col-md-8 col-md-offset-1">
  <div id="recipe_info">
  <h1>
    <%= @recipe.title %>
  </h1>
  
  <p class="description">
    <%= @recipe.description %>
  </p>
  <span class="quiet"><small>Created <%= time_ago_in_words(@recipe.created_at) %> ago by: </small><em><%= @recipe.chef.chefname %></em></span>
  
</div>
</div>
</div>
<div class="row">
  <div class="col-md-6">
    <div id="ingredients">
      <h2>Ingredients</h2>
      <ul>
        <% @recipe.ingredients.each do |ingredient| %>
          <li>
            <%= ingredient.name %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-md-6">
    <div id="directions">
      <h2>Directions</h2>
      <ul>
        <% @recipe.directions.each do |direction| %>
          <li>
            <%= direction.step %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% if logged_in? && (current_chef == @recipe.chef || current_chef.admin? %>
  <%= link_to 'Edit', edit_recipe_path, class: 'btn btn-default' %>
  <%= link_to 'Delete', recipe_path, method: :delete, data: {confirm: "Are you sure you want to delete this recipe?"}, class: 'btn btn-danger' %>
<% end %>
   <%= link_to 'Back', root_path, class: 'btn btn-default' %>
</div>

</div>

